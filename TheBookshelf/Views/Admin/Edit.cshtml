@model Book

@{
    ViewBag.Title = "Edit Book";
    Layout = "_AdminLayout";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post" style="width:600px">
    <input type="hidden" asp-for="BookID"/>

    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control"/>
    </div>

    <div cite="form-group">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control"/>
    </div>

    <div cite="form-group">
        <label asp-for="Available"></label>
        <div><span asp-validation-for="Available" class="text-danger"></span></div>
        <input type="text" asp-for="Available" class="form-control"/>
    </div>

    <div cite="form-group">
        <label asp-for="Pages"></label>
        <div><span asp-validation-for="Pages" class="text-danger"></span></div>
        <input asp-for="Pages" class="form-control" />
        
    </div>

    <div cite="form-group">
        <label asp-for="Date"></label>
        <div><span asp-validation-for="Date" class="text-danger"></span></div>
        <input asp-for="Date" class="form-control" />
    </div>

    <div cite="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div cite="form-group">
        <label asp-for="img"></label>
        <div><span asp-validation-for="img" class="text-danger"></span></div>
        <input asp-for="img" class="form-control" />
    </div>

    <div cite="form-group">
        <label asp-for="CategoryID"></label>
        <div><span asp-validation-for="CategoryID" class="text-danger"></span></div>
        <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories"></select>
    </div>

    <div cite="form-group">
        <label asp-for="AuthorID" class="control-label"></label>
        <div><span asp-validation-for="AuthorID" class="text-danger"></span></div>
        <select asp-for="AuthorID" class="form-control" asp-items="ViewBag.Authors"></select>
    </div>


    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Books" class="btn btn-secondary">Cancel</a>
    </div>
</form>