@model IEnumerable<AppUser>

@{
    ViewBag.Title = "Users";
    Layout = "_AdminLayout";
}


<div >
    <div class="col-md-6 offset-3">
        <p>
            <h4>List of all users</h4>
        </p>

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Full Name</th>
                    <th>User Name</th>
                    <th>Email</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @item.FullName
                        </td>
                        <td class="align-middle">
                            @item.UserName
                        </td>
                        <td class="align-middle">
                            @item.Email
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>