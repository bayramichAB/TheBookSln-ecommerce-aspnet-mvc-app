@model Author

@{
    ViewBag.Title = "Edit Author";
    Layout = "_AdminLayout";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post" style="width:600px">
    <input type="hidden" asp-for="AuthorID" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>



    <div cite="form-group">
        <label asp-for="Biography"></label>
        <div><span asp-validation-for="Biography" class="text-danger"></span></div>
        <textarea asp-for="Biography" class="form-control"></textarea>
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Authors" class="btn btn-secondary">Cancel</a>
    </div>
</form>